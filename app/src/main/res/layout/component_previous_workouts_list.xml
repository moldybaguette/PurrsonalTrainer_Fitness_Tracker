<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginTop="7dp">

    <LinearLayout
        android:id="@+id/monthWorkoutList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/workout_item_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="August 2024"
            android:textColor="#B3FFFFFF"
            android:fontFamily="@font/knicknack_medium"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/workout_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="1"
            android:textColor="#B3FFFFFF"
            android:text="2 Workouts"
            android:fontFamily="@font/knicknack_medium"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/previousWorkoutsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        tools:itemCount="2"
        tools:listitem="@layout/item_home_single_workout"/>

</LinearLayout>